<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限 - Google登录需要 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- 读写外部存储 - 图片选择和保存需要 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    
    <!-- Android 13+ 图片权限 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".MomentsApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Moments"
        tools:targetApi="31">
        
        <!-- 登录界面 - 启动页 -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Moments.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 主界面 - 朋友圈 -->
        <activity
            android:name=".ui.moments.MomentsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Moments"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- 发布动态界面 -->
        <activity
            android:name=".ui.post.PostActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Moments"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- 图片查看界面 -->
        <activity
            android:name=".ui.photo.PhotoViewActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Moments.FullScreen" />
        
        <!-- FileProvider - 用于分享图片 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
